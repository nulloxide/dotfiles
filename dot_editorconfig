# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# JavaScript, TypeScript, JSON
[*.{js,jsx,ts,tsx,json,json5}]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Rust
[*.rs]
indent_style = space
indent_size = 4

# Go
[*.go]
indent_style = tab
indent_size = 4

# Ruby
[*.rb]
indent_style = space
indent_size = 2

# HTML, CSS
[*.{html,css,scss,sass,less}]
indent_style = space
indent_size = 2

# XML, SVG
[*.{xml,svg}]
indent_style = space
indent_size = 2

# Makefiles always use tabs
[Makefile]
indent_style = tab

# Batch files use CRLF
[*.{cmd,bat}]
end_of_line = crlf
