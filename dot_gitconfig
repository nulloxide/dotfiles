[credential "https://dev.azure.com"]
	useHttpPath = true

[pull]
	rebase = false

[push]
	default = simple
	followTags = true
	autoSetupRemote = true

[fetch]
	prune = true
	pruneTagstrue

[rebase]
	autoStash = true
	autoSquash = true

[merge]
	ff = false
	conflictStyle = zdiff3

[diff]
	algorithm = histogram
	colorMoved = default

[rerere]
	enabled = true

[column]
	ui = auto

[branch]
	sort = -committerdate

[init]
	defaultBranch = main

[help]
	autocorrect = prompt

[maintenance]
	auto = true
	strategy = incremental
