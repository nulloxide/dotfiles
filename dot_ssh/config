# Global defaults for all hosts
Host *
  # Security - prefer modern algorithms
  HostKeyAlgorithms ssh-ed25519,rsa-sha2-512,rsa-sha2-256
  KexAlgorithms curve25519-sha256,curve25519-sha256@libssh.org,diffie-hellman-group16-sha512
  Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com
  MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com

  # Connection persistence - reuse connections for speed
  ControlMaster auto
  ControlPath ~/.ssh/sockets/%r@%h:%p
  ControlPersist 10m

  # Keep connections alive
  ServerAliveInterval 60
  ServerAliveCountMax 3
  TCPKeepAlive yes

  # Performance
  Compression yes

  # Security - disable risky features
  ForwardAgent no
  ForwardX11 no
  HashKnownHosts yes
  StrictHostKeyChecking ask
  VerifyHostKeyDNS yes

  # Identity management
  IdentitiesOnly yes
  AddKeysToAgent yes

# Project-specific hosts
Host devdroid.monachilpartners.com
  User codeconductor
  Port 22
  IdentityFile ~/.ssh/devdroid_ed25519

Host 20.114.198.120
  HostName 20.114.198.120
  User codeconductor
  Port 22
  IdentityFile ~/.ssh/devdroid_ed25519

Host LegacySentinel.monachilpartners.com
  HostName LegacySentinel.monachilpartners.com
  User vm-admin
  Port 22
  IdentityFile ~/.ssh/devdroid_ed25519


