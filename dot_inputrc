# Better readline behavior for bash/zsh

# Case-insensitive tab completion
set completion-ignore-case on

# Treat hyphens and underscores as equivalent
set completion-map-case on

# Show all completions immediately (no double tab)
set show-all-if-ambiguous on

# Append slash to completed directory names
set mark-directories on
set mark-symlinked-directories on

# Show file type indicators (like ls -F)
set visible-stats on

# Color completion matches
set colored-stats on

# Use single tab for completion
set show-all-if-unmodified on

# More intelligent Up/Down arrow behavior
# Up searches history for commands starting with current input
"\e[A": history-search-backward
"\e[B": history-search-forward

# Better word navigation (Ctrl+Left/Right)
"\e[1;5C": forward-word
"\e[1;5D": backward-word

# Home/End keys
"\e[H": beginning-of-line
"\e[F": end-of-line

# Delete key
"\e[3~": delete-char

# Alt+Backspace deletes word backward
"\e\d": backward-kill-word

# Allow UTF-8 input and output
set input-meta on
set output-meta on
set convert-meta off

# Don't bell on completion errors
set bell-style none

# Page through completions instead of showing everything at once
set page-completions on

# Number of completions to show before asking
set completion-query-items 200
